// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CustomerType {
  individual
  business
}

model Customer {
  id          String        @id @default(uuid())
  type        CustomerType
  Booking     Booking[]
  SpaceReview SpaceReview[]
}

model Booking {
  id         String   @id @default(uuid())
  customer   Customer @relation(fields: [customerId], references: [id])
  space      Space    @relation(fields: [spaceId], references: [id])
  startDate  DateTime
  endDate    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customerId   String
  spaceId    String

  @@index([createdAt])
}

model Vendor {
  id     String  @id @default(uuid())
  spaces Space[]
}

model SpaceReview {
  id         String   @id @default(uuid())
  reviewer   Customer @relation(fields: [customerId], references: [id])
  space      Space    @relation(fields: [spaceId], references: [id])
  spaceId    String
  customerId String
}

model Space {
  id           String        @id @default(uuid())
  location     Json
  capacity     Int?
  facilities   Json?
  vendor       Vendor        @relation(fields: [vendorId], references: [id])
  spaceOwnerId String?
  Booking      Booking[]
  SpaceReview  SpaceReview[]
  vendorId     String
}
